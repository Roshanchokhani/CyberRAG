# Database Configuration (REQUIRED â€” no default credentials)
DATABASE_URL=postgresql://postgres:YOUR_SECURE_PASSWORD@localhost:5433/cyberrag

# Ollama LLM
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment: "development" or "production"
# - development: enables reload, swagger docs, verbose logging
# - production: disables reload, hides docs, minimal logging
ENVIRONMENT=development

# API Key Authentication (leave empty to disable auth)
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=

# Rate Limiting (requests per minute)
RATE_LIMIT=30/minute
